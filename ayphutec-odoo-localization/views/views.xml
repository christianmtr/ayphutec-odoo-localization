<odoo>
  <data>
    <record id="ayphutec-odoo-localization.view_report_fourtenn_one_tree" model="ir.ui.view">
        <field name="name">ayphu_odoo_localization.report_fourtenn_one.tree</field>
        <field name="model">ayphu_odoo_localization.report_fourtenn_one</field>
        <field name="arch" type="xml">
            <tree string="Report 14.01" js_class="account_tree">
                <field name="journal_sub_type"/>
                <field name="sequence" invisible="1"/>
                <field name="invoice_date" string="Invoice Date"/>
                <field name="invoice_date_due"/>
                <field name="document_type"/>
                <field name="journal_code"/>
                <field name="journal_sequence_number_next"/>
                <field name="identitication_type"/>
                <field name="partner_vat"/>
                <field name="partner_name"/>
                <field name="export_invoice_value"/>
                <field name="move_amount_untaxed"/>
                <field name="exonerated"/>
                <field name="unaffected"/>
                <field name="isc"/>
                <field name="igv"/>
                <field name="plastic_bag_tax"/>
                <field name="others"/>
                <field name="move_amount_total"/>
                <field name="exchange_rate"/>
                <field name="original_document_date"/>
                <field name="original_document_type"/>
                <field name="original_document_sequence"/>
                <field name="original_document_number"/>
            </tree>
        </field>
    </record>

    <!-- Accounting menu -->
    <menuitem id="ayphutec-odoo-localization.accountant_menu_sunat_exports"
        name="Sunat Exports"
        parent="account_accountant.menu_accounting"
        groups="base.group_user" />
    <menuitem id="ayphutec-odoo-localization.accountant_menu_sunat_exports_1401"
        name="Formato 14.01"
        parent="accountant_menu_sunat_exports"
        action="view_report_fourtenn_one_tree" />

    <!-- Employee menu -->
    <menuitem id="ayphutec-odoo-localization.hr_menu_sunat_exports"
        name="Sunat Exports"
        parent="hr.menu_hr_root"
        groups="base.group_user" />
    <menuitem id="ayphutec-odoo-localization.hr_menu_sunat_exports_rrhh"
        name="Formato RR. HH."
        parent="hr_menu_sunat_exports"
        action="view_report_fourtenn_one_tree" />
  </data>
</odoo>